{
  "name": "kerberos-singlenode",
  "description": "Kerberos Administration server and KDC",
  "defaults": {
    "services": [
      "base",
      "kerberos-client",
      "kerberos-master"
    ],
    "dnsSuffix": "dev.continuuity.net",
    "provider": "rackspace",
    "hardwaretype": "medium",
    "imagetype": "ubuntu12",
    "config": {
      "krb5": {
        "krb5_conf": {
          "libdefaults": {
            "default_realm": "CONTINUUITY.NET"
          },
          "realms": {
            "default_realm_kdcs": [ "%host.service.kerberos-master%" ],
            "default_realm_admin_server": "%host.service.kerberos-master%",
            "realms": [ "continuuity.net", "dev.continuuity.net" ]
          }
        }
      }
    }
  },
  "compatibility": {
    "hardwaretypes": [
      "small",
      "medium",
      "large"
    ],
    "imagetypes": [
      "centos6",
      "ubuntu12"
    ],
    "services": [
      "base",
      "kerberos-client",
      "kerberos-master"
    ]
  },
  "constraints": {
    "layout": {
      "mustcoexist": [
        [ "kerberos-client", "kerberos-master", "base" ]
      ],
      "cantcoexist": [
      ]
    },
    "services": {
      "kerberos-master": {
        "quantities": {
          "min": "1",
          "max": "1"
        }
      }
    }
  },
  "administration": {
    "leaseduration": {
      "initial": "0",
      "max": "0",
      "step": "0"
    }
  }
}
