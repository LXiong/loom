{
  "name": "ec2",
  "description": "Amazon AWS Elastic Compute Cloud",
  "providertypes": [ "ec2" ],
  "ec2" : {
    "classname": "Ec2Provider",
    "admin": {
      "fields": {
        "aws_access_key_id": {
          "label": "Access Key ID",
          "type": "text",
          "tip": "AWS Access Key ID"
        },
        "aws_secret_access_key": {
          "label": "Secret Access Key",
          "type": "password",
          "tip": "AWS Secret Access Key"
        },
        "aws_ssh_key_id": {
          "label": "SSH Key ID",
          "type": "text",
          "override": true,
          "tip": "Region-specific SSH Key ID"
        },
        "region": {
          "label": "AWS Region",
          "type": "select",
          "options": [
            "ap-northeast-1",
            "ap-southeast-1",
            "ap-southeast-2",
            "eu-west-1",
            "sa-east-1",
            "us-east-1",
            "us-west-1",
            "us-west-2"
          ],
          "default": "us-east-1",
          "override": true,
          "tip": "AWS Region"
        },
        "identify_file": {
          "label": "SSH private key file",
          "type": "text",
          "tip": "Full path and file name to your AWS SSH private key file"
        }
      "required": [
        [ "aws_access_key_id", "aws_secret_access_key", "aws_ssh_key_id", "region", "identity_file" ]
      ]
    },
    "user": {
      "fields": {
        "security_groups": {
          "label": "Security Group",
          "type": "text",
          "default": "default",
          "tip": "AWS security group"
        },
        "availability_zone": {
          "label": "Availability Zone",
          "type": "text",
          "tip": "AWS Availability Zone"
        }
      },
      "required": [
        [ "security_groups" ]
      ]
    }
  }
}
